            <text xml:id="pp7" type="manuscript">
                <body xml:lang="fr">
                    <div xml:id="page7">
                        <head><num rend="circled" facs="#numPag">7</num></head>
                        <pb/>
                        <p>
                            

                             <seg type="line7"> 
                             <lb facs="#l1_p7"/> 
                                  ... serait peut-être l’
                                <hi rend="underlined">homme</hi>, mais 
                            </seg>

                            
                            <seg type="line7">
                            <lb facs="#l2_p7"/>
                                 qu’il ne serait pas 
                                <add place="top" facs="#add1TOP_p7">un être se rapprochant même approximativement</add> 
                                <add place="above">de</add> l’homme <del rend="strikethrough"><add place="above"> que nous</add><gap reason="cancelled" rend="underlined" extent="2 words"/></del>
                            </seg>
                            <seg type="line7">
                            <lb facs="#l3_p7"/>
                                <del rend="strikethrough"><add place="left">connaissons</add></del>
                                <del rend="underlined">et</del>
                                <del rend="strikethrough"><gap reason="cancelled" extent="7 words"/></del>
                                <add place="above"><unclear reason="illegible">que nous sommes,</unclear></add> 
                            </seg>
                            
                            <seg type="line7">
                            <lb facs="#l4_p7"/>
                                <del rend="strikethrough"><gap reason="cancelled" extent="3 words"/></del>
                                parce que le <term ref="#langage1">langage</term>
                            </seg>

                            
                            <seg type="line7">
                            <lb facs="#l5_p7"/>
                                a été <del rend="strikethrough"><gap reason="cancelled" extent="3 words"/></del> 
                                le <choice><abbr type="brevigraph">+</abbr><expan>(plus)</expan></choice> 
                                <subst><del rend="strikethrough"><gap reason="cancelled" extent="2 words"/></del> <add type="above"><del rend="strikethrough"><gap reason="cancelled" extent="1 words"/></del>formidable</add></subst>
                            </seg>
                           
                            <seg type="line7">
                             <lb facs="#l6_p7"/>
                                <add place="left">engin</add>
                                <del rend="strikethrough"><gap reason="cancelled" extent="3 words" /></del> 
                                <add place="above">d’</add>
                                <term ref="#ac">action collective</term> 
                                <add place="above">d’une part</add>
                                , <term ref="#ei">et d’éducation</term>
                            </seg>
                            
                            <seg type="line7">
                            <lb facs="#l7_p7"/><!-- MANCA UN SEG LINE TERM DA NOIA  --> 
                                
                                <add facs="#add2LX_p7" place="left">
                                    <subst>
                                    <del rend="strikethrough"><gap reason="cancelled"/></del>
                                   <add place="below"> <term ref="#ei">individuelle</term></add>
                                    </subst>
                                </add> 
                                <del rend="strikethrough"><damage agent="ink"/><gap reason="cancelled"/></del>
                                de l’autre<ptr target="#n1"/>, <gap reason="illegible"/>
                            </seg>

                            <seg type="line7">
                            <lb facs="#l8_p7"/>
                            
                                <del rend="strikethrough"><gap reason="cancelled"/></del><space facs="#space_1" />
                             </seg>

                            <seg type="line7">
                              <lb facs="#l9_p7"/>
                                <del rend="strikethrough"><gap reason="cancelled"/></del><gap reason="illegible"/>l’instrument sans
                            </seg>

                            <seg type="line7">
                            <lb facs="#l10_p7"/>
                           
                                lequel 
                                <subst>
                                    <add place="above">en fait </add>
                                    <del rend="strikethrough"><gap reason="cancelled"/></del>
                                    <add facs="#add3LX2_p7" place="left">l’individu ou l’espèce</add> 
                                    <del rend="strikethrough"><gap reason="cancelled"/></del>
                                    <add place="above">n’auraient jamais pu</add> 
                                </subst>
                                même aspirer
                           </seg>

                            
                            <seg type="line7">
                            <lb facs="#l11_p7"/>
                                à développer dans aucun sens 
                                <del rend="strikethrough"><gap reason="cancelled"/></del>
                                ses 
                                <del rend="strikethrough"><gap reason="cancelled"/></del>
                            </seg>

                           
                            <seg type="line7">
                             <lb facs="#l12_p7"/>
                                <term ref="#fm">facultés natives</term><ptr target="#n2"/>.<del rend="strikethrough"><gap reason="cancelled"/></del><space facs="#space_2"/>
                            </seg>
                            
                            <seg type="line7">
                            <lb facs="#L13Canc_p7"/><space facs="#space_3"/><del rend="strikethrough"><gap reason="cancelled"/></del>
                            </seg>
                            <seg type="line7">
                            <lb facs="#L14Canc_p7"/><space facs="#space_4"/><del rend="strikethrough"><gap reason="cancelled"/></del>
                            </seg>
                            <seg type="line7">
                            <lb facs="#L15Canc_p7"/><del rend="strikethrough"><gap reason="cancelled"/></del>
                            </seg>
                            <space facs="#space_5" />
                    </p>
                    </div>
                     <div type="list_7">
                        <list type="terminology">
                            <item>
                                <term xml:lang="fr" xml:id="langage1">langage</term>
                                <gloss xml:lang="fr" target="#langage1"><ref  target ="https://raw.githubusercontent.com/SilviaPiccini/Simple_FdS/main/BANCA_DATI_SIMPLE_FdS.owl">Faculté significatrice et exercice de cette faculté à travers une convention sociale; cette faculté ne saurait être exercée sans un instrument venu du dehors : la langue</ref></gloss>
                            </item>
                            <item>
                                <term xml:lang="fr" xml:id="ac">action collective</term>
                                <gloss xml:lang="it" target="#ei">l'insieme delle variazioni individuali e personali rispetto a una norma linguistica (ad esempio particolarità di pronuncia o lessico).</gloss>
                            </item>
                            <item>
                                <term xml:lang="fr" xml:id="ei">éducation individuelle</term>
                                <gloss xml:lang="it" target="#ei">Parte attiva e individuale della lingua, si distingue in: 1°) l'uso delle facoltà in generale in vista della lingua (fonazione, ecc.); 2) l'uso individuale del codice linguistico secondo il pensiero individuale</gloss>
                            </item>
                            <item>
                                <term xml:lang="fr" xml:id="fn">facultés natives</term>
                                <gloss xml:lang="it" target="#fn">il linguaggio è una facoltà innata che consente all'uomo di comunicare, mentre il linguaggio è il modo in cui questa facoltà si manifesta e si realizza concretamente</gloss>
                            </item>
                        </list>
                    </div>
                    <div type="notes_7">
                        <note xml:id="n1">Sul ruolo del linguaggio in filogenesi e in ontogenesi v. almeno Deacon (1997) e Vygotskij (1934).</note>
                        <note xml:id="n2">Saussure non nega affatto il radicamento biologico del linguaggio. Ma il suo “innatismo” non può essere confuso con quello di Chomsky, anzitutto per la chiara distinzione (sebbene nel contesto di una complementarietà affermata a più riprese) tra lingua e linguaggio.</note>
                    </div>
                </body>
            </text>
        <!-- MANOSCRITTO PAG 8 --> 
            <text xml:id="pp8" type="manuscript" >
                <body xml:lang="fr">
                    <div xml:id="page8">
                        <head><num rend="circle">8</num></head>
                        <pb/>
                        <p>
<!-- Linea 1 -->           
                            <seg type="line8">
                                <lb facs="#L1_p8"/>
                                Ici ce présente cette objection <gap reason="editorial" extent="2 words" />
    <!-- Linea 2 -->         </seg>     

                            <seg type="line8"><!-- MANCA UN SEG term da NOIA--> 
                                <lb facs="#L2_p8"/>
                                <gap reason="editorial" extent="1 word"/>
                                <add place="above">
                                    <choice><abbr type="brevigraph">+</abbr><expan> (plus)</expan></choice> 
                                    <supplied reason="editorial" >ou moins</supplied> fondée 
                                    <unclear reason="illegible">selon nous </unclear>
                                </add> : vous transformez l’<term ref="#edl">étude</term>
    <!-- Linea 3 -->        </seg>    

                             <seg type="line8">
                            <lb facs="#L3_p8"/>
                                <term ref="#edl">des langues</term>  en l’<term ref="#edl">étude du langage</term>, <del rend="strikethrough">humain</del>
    <!-- Linea 4 -->        </seg>

                            <seg type="line8">
                                <lb facs="#L4_p8"/>
                                <add place="left" facs="add1LX_p8"> du <term ref="#langage1">langage</term></add>considéré comme <term ref="#fn">faculté de l’homme</term>, comme
    <!-- Linea 5 -->        </seg>                     
                            
                            <seg type="line8">
                            <lb facs="#L5_p8"/>
                                    <add place="left" facs="add2LX_p8"> un des</add> signes distinctifs de son espèce, comme caractère
    <!-- Linea 6 -->         </seg>    

                            
                            <seg type="line8">
                                <lb facs="#L6_p8"/>
                                    anthropologique ou pour ainsi dire zoologique.
    <!-- Linea 7 -->         </seg>   

                             <seg type="line8">             
                                <lb facs="#L7_p8"/>
                                    Messieurs, c’est ici un point sur lequel il
                            </seg>
    <!-- Linea 8-->                                
                            
                            <seg type="line8">
                                <lb facs="#L8_p8"/>
                                    me faudrait disposer d’un temps considérable
                            </seg>
    <!-- Linea 9 -->                                
                           
                            <seg type="line8"> <!-- MANCA UN SEG term da NOIA--> 
                             <lb facs="#L9_p8"/>
                                    pour exposer, <add place="above">développer</add> et justifier mon <term ref="#pdv">point de</term>
    <!-- Linea 10 -->       </seg>  

                            <seg type="line8">                
                                <lb facs="#L10_p8"/>
                                    <term ref="#pdv">vue</term>, qui n’est pas autre que celui de tous 
    <!-- Linea 11 -->        </seg>

                            <seg type="line8">                           
                                <lb facs="#L11_p8"/>
                                    les <term ref="#linguiste">linguistes</term> actuels : c’est qu’en effet l’<term ref="#edl">étude</term>
    <!-- Linea 12 -->        </seg> 

                            <seg type="line8">                          
                                <lb facs="#L12_p8"/>
                                    <term ref="#edl">du langage</term><add place="above">comme fait</add> humain est tout entier ou
    <!-- Linea 13 -->       </seg>

                            <seg type="line8">                           
                                    <lb facs="#L13_p8"/> 
                                    presque <choice><abbr type="brevigraph">tt</abbr><expan>tout</expan></choice> entier contenu dans l’étude <hi rend="underlined">des langues</hi>.
    <!-- Linea 14 -->       </seg>  

                            <seg type="line8">                   
                            <lb facs="#L14_p8"/> 
                                    Le <term ref="#physiologiste">phsiologiste</term>, <del rend="strikethrough">et</del> le <term ref="#psychologue">psychologue</term> <del rend="strikethrough"><gap reason="cancelled" extent= "1 word"></gap></del>
    <!-- Linea 15 -->       </seg>

                           
                            <seg type="line8"> 
                                 <lb facs="#L15_p8"/>
                                    <add place="left" facs="add3LX_p8">et le <hi rend="underline"><term ref="#logicien">logicien</term> pourront</hi></add> longtemps disserter, le <term ref="#philosophe">philosophe</term>
    <!-- Linea 16 -->       </seg>   

                            <seg type="line8"> 
                                <lb facs="#L16_p8"/>
                                    pourra reprendre ensuite les résultats
    <!-- Linea 17 -->       </seg> 


                            <seg type="line8"> 
                             <lb facs="#L17_p8"/>
                                    combinés de la <term ref="#logique">logique</term>, de la <term ref="#psychologie">psychologie</term> et
    <!-- Linea 18 -->       </seg>   

                            <seg type="line8"> 
                                <lb facs="#L18_p8"/>
                                    de la <term ref="#physiologie">physiologie</term>, jamais, je me permets de
    <!-- Linea 19 -->        </seg>

                            <seg type="line8"> 
                                <lb facs="#L19_p8"/> 
                                    le dire, les plus élémentaires phénomènes du
    <!-- Linea 20-->        </seg>  

                            <seg type="line8"> 
                                <lb facs="#L20_p8"/>
                                    <term ref="#langage1">langage</term> ne seront soupçonnés, ou clairement
    <!-- Linea 21 -->       </seg> 

                            <seg type="line8"> 
                                <lb facs="#L21_p8"/>
                                    aperçus, classés et compris, si l’on ne
    <!-- Linea 22 -->        </seg>     

                            <seg type="line8"> 
                                <lb facs="#L22_p8"/>
                                    e recourt en <choice><abbr type="brevigraph">1°</abbr><expan>première</expan></choice> et dernière instance à l’<term ref="#edl">étude</term>
    <!-- Linea 23 -->       </seg>
    
                            <seg type="line8">                      
                                <lb facs="#L23_p8"/>
                                <hi rend="underlined"><term ref="#edl">des langues</term></hi><ptr target="#n3"/>. <term ref="#langue1">Langue</term> et <term ref="#langage1">langage</term> ne sont
    <!-- Linea 24 -->       </seg>   

                            <seg type="line8"> 
                                <lb facs="#L24_p8"/>
                                    qu’une même chose ;<del rend="strikethrough"><gap reason="cancelled" extent="1 word"/></del> l’un est la générali--
    <!-- Linea 25 -->        </seg>  

                            <seg type="line8"> 
                                <lb facs="#L25_p8"/>
                                    sation de l’autre<ptr target="#n4"/>. Vouloir étudier le <term ref="#langage1">langage</term>
                            </seg>
                        </p>
                    </div>
                    <div type="list_8">
                        <list type="terminology">
                            <item>
                                <term xml:lang="fr" xml:id="edl">étude des langues</term>
                                <gloss xml:lang="fr" target="#edl"><ref  target ="https://raw.githubusercontent.com/SilviaPiccini/Simple_FdS/main/BANCA_DATI_SIMPLE_FdS.owl">Ce qui frappe tout d'abord dans l'étude des langues, c'est leur diversité, les différences linguistiques qui apparaissent dès qu'on passe d'un pays à un autre, ou même d'un district à un autre. Si les divergences dans le temps échappent souvent à l'observateur, les divergences dans l'espace sautent tout de suite aux yeux.</ref></gloss>
                            </item>
                            <item>
                                <term xml:lang="fr" xml:id="pdv">point de vue</term>
                                <gloss xml:lang="it" target="#pdv">il punto di vista a cui si fa riferimento indica che lo studio del linguaggio come fatto umano è tutto o quasi tutto ricompreso nello studio delle lingue</gloss>
                            </item>
                            <item>
                                <term xml:lang="fr" xml:id="linguiste">linguistes</term>
                                <gloss xml:lang="it" target="#linguiste"> Chi si dedica allo studio delle lingue (o anche soltanto, o in modo specifico, della propria lingua), soprattutto da un punto di vista teorico, sistematico e storico; studioso di linguistica.</gloss>
                            </item>
                            <item>
                                <term xml:id="physiologiste">physiologiste</term>
                                <gloss xml:lang="it" target="#physiologiste">
                                    <ref target="https://www.treccani.it/vocabolario/ricerca/fisiologo/">Cultore della fisiologia, studioso di fisiologia</ref>
                                </gloss>
                            </item>
                             <item>
                                    <term xml:id="psychologue">psychologue</term>
                                    <gloss xml:lang="it" target="#psychologue">
                                        <ref target="https://www.treccani.it/vocabolario/psicologo/">Studioso di psicologia; chi esercita la psicologia come professione in determinati settori o ambienti</ref>
                                    </gloss>
                            </item>
                            <item>
                                <term xml:id="philosophe">philosophe</term>
                                <gloss xml:lang="it" target="#philosophe">
                                    <ref target="https://it.wikipedia.org/wiki/Filosofo">Il filosofo, nella definizione più generica è colui che professa e/o mette in atto una filosofia, cioè, una dottrina, elaborata attraverso un'autonoma indagine razionale, in parte originale e in parte che si richiama, in accordo o in contrasto, ai pensatori che lo hanno preceduto nella storia della filosofia, su aspetti universali, teoretici e pratici, della vita umana.</ref>  
                                </gloss>
                            </item>
                            <item>
                                <term xml:id="logicien">logicien</term>
                                <gloss xml:lang="it" target="#logicien">Studioso di logica
                                </gloss>
                            </item>
                            <item>
                                <term xml:id="logique">logique </term>
                                <gloss xml:lang="it" target="#logique">Disciplina che studia le condizioni di validità delle argomentazioni deduttive.
                                </gloss>
                            </item>
                            <item>
                                <term xml:id="psychologie">psychologie </term>
                                <gloss xml:lang="IT" target="#psychologie">
                                    <ref target="https://www.treccani.it/enciclopedia/psicologia/">Scienza che studia i processi psichici, coscienti e inconsci, cognitivi (percezione, attenzione, memoria, linguaggio, pensiero ecc.)e dinamici (emozioni, motivazioni, personalità ecc.).</ref> 
                                </gloss>
                            </item>
                            <item>
                                <term xml:lang="fr" xml:id="langue1">langue</term>
                                <gloss xml:lang="fr" target="#langue1"><ref target ="https://raw.githubusercontent.com/SilviaPiccini/Simple_FdS/main/BANCA_DATI_SIMPLE_FdS.owl">Système particulier de symboles indépendants</ref></gloss>
                            </item>
                            <item>
                                <term  xml:id="physiologie"> physiologie </term>
                                <gloss xml:lang="IT" target="#physiologie">
